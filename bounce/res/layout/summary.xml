<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!--
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/endscreen"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    </RelativeLayout>
    -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:background="@drawable/endpage"
        android:orientation="vertical" >
        
               <ProgressBar
            android:id="@+id/level_progress"
            android:layout_width="870dip"
            android:layout_height="wrap_content"
            style="@style/CustomProgressBar" 
            android:paddingTop="370dip"
            android:paddingLeft="80dip"
            android:layout_margin="5dip" />

        <TextView
            android:id="@+id/total_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avg_mpg"
            android:layout_marginLeft="643dp"
            android:layout_marginTop="220dp"
            android:layout_toRightOf="@+id/top_tip"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/avg_mpg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="175dp"
            android:textColor="#ffd200"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/top_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="84dp"
            android:layout_marginTop="148dp"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/rep_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avg_mpg"
            android:layout_marginLeft="643dp"
            android:layout_marginTop="308dp"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/exitButton"
			android:layout_width="210dp"
			android:layout_height="45dp"
			android:background="@null"
			android:scaleType="centerCrop"
            android:layout_marginLeft="518dp"
            android:layout_marginTop="468dp"
            android:src="@drawable/endbutton" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="210dp"
            android:layout_height="45dp"
            android:background="@null"
            android:layout_marginLeft="738dp"
            android:layout_marginTop="468dp"
            android:scaleType="centerCrop"
            android:src="@drawable/nextdrive" />
    </FrameLayout>

</LinearLayout>
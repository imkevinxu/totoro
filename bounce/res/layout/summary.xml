<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <!--<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/endscreen"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    </RelativeLayout> -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top|left"
        android:background="@drawable/endpage"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/level_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/avg_mpg"
            android:paddingTop="10px"
            android:layout_marginTop="400dp"
            android:paddingLeft="115px"
            android:paddingRight="115px"
            android:visibility="visible" />

        <TextView
            android:id="@+id/total_coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avg_mpg"
            android:layout_marginLeft="643dp"
            android:layout_marginTop="220dp"
            android:layout_toRightOf="@+id/top_tip"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/avg_mpg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="175dp"
            android:textColor="#ffd200"
            android:textSize="100dp" />

        <TextView
            android:id="@+id/top_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="148dp"
            android:layout_marginLeft="84dp"
            android:textColor="#ffffff"
            android:textSize="18dp" />
        
        <TextView
            android:id="@+id/rep_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avg_mpg"
            android:layout_marginLeft="643dp"
            android:layout_marginTop="308dp"
            android:textColor="#ffffff"
            android:textSize="30dp" />
        
        <ImageButton
            android:id="@+id/exitButton"
            android:layout_width="139dp"
            android:layout_height="35dp"
            android:src="@drawable/endbutton" />

        <ImageButton
            android:id="@+id/nextButton"
            android:layout_width="144dp"
            android:layout_height="36dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/nextdrive" />
	
    </FrameLayout>

</LinearLayout>